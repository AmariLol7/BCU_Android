<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundPrimary"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/mainconfig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:backgroundTint="?attr/ButtonPrimary"
                android:contentDescription="@string/def_config"
                android:scaleType="center"
                android:tint="?attr/iconPrimary"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabSize="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_settings_black_24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="96dp"
                android:orientation="vertical"
                android:paddingBottom="96dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/anvibtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="?attr/ButtonPrimary"
                    android:drawablePadding="10dp"
                    android:text="@string/main_unitinfo"
                    android:textAllCaps="false"
                    android:textColor="?attr/TextPrimary"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/eninfbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="?attr/ButtonPrimary"
                    android:text="@string/main_enemy_info"
                    android:textAllCaps="false"
                    android:textColor="?attr/TextPrimary"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/stgbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="?attr/ButtonPrimary"
                    android:drawablePadding="10dp"
                    android:text="@string/stg_inf"
                    android:textAllCaps="false"
                    android:textColor="?attr/TextPrimary"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/medalbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="?attr/ButtonPrimary"
                    android:drawablePadding="10dp"
                    android:text="@string/main_medal"
                    android:textAllCaps="false"
                    android:textColor="?attr/TextPrimary"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/basisbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="?attr/ButtonPrimary"
                    android:drawablePadding="10dp"
                    android:text="@string/main_equip"
                    android:textAllCaps="false"
                    android:textColor="?attr/TextPrimary"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/bgbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="?attr/ButtonPrimary"
                    android:drawablePadding="10dp"
                    android:text="@string/main_bg"
                    android:textAllCaps="false"
                    android:textColor="?attr/TextPrimary"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/mubtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="?attr/ButtonPrimary"
                    android:drawablePadding="10dp"
                    android:text="@string/main_music"
                    android:textAllCaps="false"
                    android:textColor="?attr/TextPrimary"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/pmbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="?attr/ButtonPrimary"
                    android:drawablePadding="10dp"
                    android:text="@string/main_packs"
                    android:textAllCaps="false"
                    android:textColor="?attr/TextPrimary"
                    android:textSize="24sp" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>